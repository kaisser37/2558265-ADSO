<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ResumenUsuario"
        android:padding="20dp">

        <TextView
            android:id="@+id/etq_nombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/etq_fecha_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha inicio:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/etq_fecha_fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha fin:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/etq_preguntas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preguntas:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/etq_correctas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correctas:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etq_incorrectas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrectas:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutDetalles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_atras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:tooltipText="Cerrar SesiÃ³n"
        app:backgroundTint="#8E8E8E"
        app:fabCustomSize="50dp"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/icono_atras"
        app:tint="@color/white"
        />

</FrameLayout>
